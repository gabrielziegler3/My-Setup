[module/pulseaudio-tail]
type = custom/script
exec = ~/polybar-scripts/polybar-scripts/pulseaudio-tail/pulseaudio-tail.sh
tail = true
click-right = exec pavucontrol &
click-left = ~/polybar-scripts/polybar-scripts/pulseaudio-tail/pulseaudio-tail.sh --mute
scroll-up = ~/polybar-scripts/polybar-scripts/pulseaudio-tail/pulseaudio-tail.sh --up
scroll-down = ~/polybar-scripts/polybar-scripts/pulseaudio-tail/pulseaudio-tail.sh --down
format-underline = ${colors.foreground}


[module/player-mpris-tail]
type = custom/script
exec = python3 ~/polybar-scripts/polybar-scripts/player-mpris-tail/player-mpris-tail.py -f '{icon} {:artist:t18:{artist}:}{:artist: - :}{:t20:{title}:}  %{A1:~/polybar-scripts/player-mpris-tail.py previous:} ⏮ %{A} %{A1:~/polybar-scripts/player-mpris-tail.py play-pause:} {icon-reversed} %{A} %{A1:~/polybar-scripts/player-mpris-tail.py next:} ⏭ %{A}'
tail = true
label = %output%
click-left = ~/polybar-scripts/polybar-scripts/player-mpris-tail/player-mpris-tail.py previous
click-right = ~/polybar-scripts/polybar-scripts/player-mpris-tail/player-mpris-tail.py next
click-middle = ~/polybar-scripts/polybar-scripts/player-mpris-tail/player-mpris-tail.py play-pause
format-underline = ${colors.foreground}


[module/system-usb-udev]
type = custom/script
